      font-size: 0.9rem;
      color: #444;
      max-width: 80%;
      line-height: 1.4;
    }

    @keyframes fadeIn {
      0% {
        opacity: 0;
        transform: translateY(-20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes popIn {
      0% {
        transform: scale(0);
        opacity: 0;
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    @keyframes glow {
      0% {
        box-shadow: 0 0 10px #ffd700, 0 0 20px #ffa500;
      }
      100% {
        box-shadow: 0 0 20px #ffa500, 0 0 40px #ff4500;
      }
    }
  </style>
</head>
