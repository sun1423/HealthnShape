      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Poppins', sans-serif;
      flex-direction: column;
      overflow: hidden;
      text-align: center;
    }

    .brand-title {
      font-size: 2rem;
      color: #2196f3;
